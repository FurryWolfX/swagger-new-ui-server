{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
